<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#4af1c1" android:endColor="#4af1c1"
            	android:type="linear" android:angle="90"  
            	android:centerX="0.5" android:centerY="0.5" />
            <stroke android:width="1dp" android:color="#003cff"/>
            <corners android:radius="5dp" />
        </shape>
        
    </item>
    
    <item android:state_focused="true">
        <shape>
            <gradient   
            	android:startColor="#99CCFF" android:endColor="#99CCFF"
            	android:type="linear" android:angle="90"  
            	android:centerX="0.5" android:centerY="0.5" />
            <stroke android:width="1dp" android:color="#003cff"/>
            <corners android:radius="5dp" />
        </shape>
    </item>
    
    <item   >
        <shape>
            <gradient
                android:startColor="#00000000" android:endColor="#00000000"
            	android:type="linear" android:angle="90"  
            	android:centerX="0.5" android:centerY="0.5" />
            <stroke android:width="1dp" android:color="#003cff"/>
            <corners android:radius="5dp" />
        </shape>
        
    </item>
</selector>